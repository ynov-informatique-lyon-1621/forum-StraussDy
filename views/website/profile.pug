doctype html
html(lang='fr')
    head
        meta(charset='UTF-8')
        title Forum
        link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet")
        link(rel='stylesheet', href='css/navbar_white.css')
        link(rel='stylesheet', href='css/profile.css')
    body
        div(class="navbar")
            a(href="/")
                img(src="/icon/sent-mail.png")
            div(class="menu")
                a(href="/addquestion")
                    span Add Question
                if user.role === "admin"
                    a(href="/admin/")
                        span Administrateur
                else
                    a(href="")
                        span Browse
                a(href="")
                    span Your Tickets
            div(class="profile")
                form(method="post")
                    input(type="text", name="search", placeholder="Search")
                    button(type="submit")
                        img(src="icon/search.png")
                a(href="/profile")
                    span #{user.fullname}
                a(class="power" href="disconnect")
                    img(src="icon/power-button.png")
        div(class="profile-setting")
            div(class="setting")
                h2 Settings
            div(class="automatically")
                p Automatically saved
        div(class="container-profile")
            div(class="myProfile")
                div(class="myProfile-list")
                    div(class="myProfile-active")
                        img(src="icon/man-user.png")
                    div
                        h2 My Profile
                        p How your account looks like
                div(class="myProfile-list")
                    div
                        img(src="icon/notification.png")
                    div
                        h2 Notifications
                        p Email notifications and all around this
                div(class="myProfile-list")
                    div
                        img(src="icon/reload.png")
                    div
                        h2 Download History
                        p View your recent downloads
                div(class="myProfile-list")
                    div
                        img(src="icon/shopping-cart.png")
                    div
                        h2 Billing & invoices
                        p Everything about your money
                div(class="myProfile-list border")
                    div
                        img(src="icon/email.png")
                    div
                        h2 Support
                        p Do you need help?
            div(class="bio")
                div(class="bio-1")
                    h2 My Profile
                    div(class="bio-form")
                        form
                            div(class="bio-img flex")
                                div(class="bio-left")
                                    img(src="icon/reload.png")
                                div(class="bio-right")
                                    label Your name
                                    input(value=user.fullname)
                            label Bio
                            textarea #{user.bio}
                            label E-mail Address
                            input(value=user.username)
                            button Change
                            label Password
                            input(type="password", value=user.password)
                            button Change
                div(class="service")
                    h2 Connected Services
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/paypal.png")
                            p Paypal
                        div(class="mail")
                            p me@janlosert.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/spotify.png")
                            p Spotify
                        div(class="mail")
                            p janlosert@dashboard.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/facebook2.png")
                            p Facebook
                        div(class="mail")
                            p me@janlosert.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/twitter2.png")
                            p Twitter
                        div(class="mail")
                            p @janlosert.com
                    div(class="service-list border")
                        div(class="service-title")
                            img(src="icon/pinterest2.png")
                            p Pinterest
                        div(class="mail")
                            p me@janlosert.com